# Production Environment Configuration for Farmer Budget Optimizer

# Application Settings
APP_NAME=farmer-budget-optimizer
APP_VERSION=1.0.0
ENVIRONMENT=production
DEBUG=false

# Server Configuration
HOST=0.0.0.0
PORT=8000
WORKERS=4
RELOAD=false

# Logging Configuration
LOG_LEVEL=INFO
LOG_FORMAT=json
LOG_FILE=/var/log/farmer-budget-optimizer/app.log
LOG_JSON=true

# CORS Configuration
CORS_ORIGINS=https://yourdomain.com,https://www.yourdomain.com
CORS_CREDENTIALS=true

# AWS Configuration
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=your_access_key_here
AWS_SECRET_ACCESS_KEY=your_secret_key_here

# AWS Service Configuration
AWS_FORECAST_ROLE_ARN=arn:aws:iam::your-account:role/ForecastRole
AWS_QUICKSIGHT_ACCOUNT_ID=your_quicksight_account_id
AWS_QUICKSIGHT_NAMESPACE=default
AWS_S3_BUCKET=farmer-budget-optimizer-data

# Database/Storage Configuration
DATA_DIR=/app/data
CACHE_DIR=/app/cache
BACKUP_DIR=/app/backups

# External API Configuration
MARKET_DATA_API_KEY=your_market_data_api_key
MARKET_DATA_BASE_URL=https://api.marketdata.com/v1

# Performance Configuration
REQUEST_TIMEOUT=300
MAX_CONCURRENT_REQUESTS=100
CACHE_TTL=3600

# Security Configuration
API_KEY_HEADER=X-API-Key
RATE_LIMIT_PER_MINUTE=60

# Health Check Configuration
HEALTH_CHECK_TIMEOUT=30
SERVICE_CHECK_INTERVAL=300

# Monitoring Configuration
ENABLE_METRICS=true
METRICS_PORT=9090