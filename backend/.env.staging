# Staging Environment Configuration for Farmer Budget Optimizer

# Application Settings
APP_NAME=farmer-budget-optimizer-staging
APP_VERSION=1.0.0-staging
ENVIRONMENT=staging
DEBUG=false

# Server Configuration
HOST=0.0.0.0
PORT=8000
WORKERS=2
RELOAD=false

# Logging Configuration
LOG_LEVEL=INFO
LOG_FORMAT=json
LOG_FILE=/app/logs/app.log
LOG_JSON=true

# CORS Configuration
CORS_ORIGINS=https://staging.yourdomain.com,https://staging-api.yourdomain.com
CORS_CREDENTIALS=true

# AWS Configuration (staging account)
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=your_staging_access_key_here
AWS_SECRET_ACCESS_KEY=your_staging_secret_key_here

# AWS Service Configuration
AWS_FORECAST_ROLE_ARN=arn:aws:iam::your-staging-account:role/ForecastRole
AWS_QUICKSIGHT_ACCOUNT_ID=your_staging_quicksight_account_id
AWS_QUICKSIGHT_NAMESPACE=staging
AWS_S3_BUCKET=farmer-budget-optimizer-staging

# Database/Storage Configuration
DATA_DIR=/app/data
CACHE_DIR=/app/cache
BACKUP_DIR=/app/backups

# External API Configuration
MARKET_DATA_API_KEY=your_staging_market_data_api_key
MARKET_DATA_BASE_URL=https://staging-api.marketdata.com/v1
USE_MOCK_DATA=false

# Performance Configuration
REQUEST_TIMEOUT=180
MAX_CONCURRENT_REQUESTS=50
CACHE_TTL=1800

# Security Configuration
API_KEY_HEADER=X-API-Key
RATE_LIMIT_PER_MINUTE=100

# Health Check Configuration
HEALTH_CHECK_TIMEOUT=20
SERVICE_CHECK_INTERVAL=180

# Monitoring Configuration
ENABLE_METRICS=true
METRICS_PORT=9090