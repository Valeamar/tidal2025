# Development Environment Configuration for Farmer Budget Optimizer

# Application Settings
APP_NAME=farmer-budget-optimizer-dev
APP_VERSION=1.0.0-dev
ENVIRONMENT=development
DEBUG=true

# Server Configuration
HOST=127.0.0.1
PORT=8000
WORKERS=1
RELOAD=true

# Logging Configuration
LOG_LEVEL=DEBUG
LOG_FORMAT=detailed
LOG_FILE=logs/app.log
LOG_JSON=false

# CORS Configuration
CORS_ORIGINS=http://localhost:3000,http://127.0.0.1:3000
CORS_CREDENTIALS=true

# AWS Configuration (use localstack or dev account)
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=test
AWS_SECRET_ACCESS_KEY=test
AWS_ENDPOINT_URL=http://localhost:4566

# AWS Service Configuration
AWS_FORECAST_ROLE_ARN=arn:aws:iam::123456789012:role/ForecastRole
AWS_QUICKSIGHT_ACCOUNT_ID=123456789012
AWS_QUICKSIGHT_NAMESPACE=default
AWS_S3_BUCKET=farmer-budget-optimizer-dev

# Database/Storage Configuration
DATA_DIR=./data
CACHE_DIR=./cache
BACKUP_DIR=./backups

# External API Configuration (use mock data in development)
MARKET_DATA_API_KEY=dev_key
MARKET_DATA_BASE_URL=http://localhost:8001/mock
USE_MOCK_DATA=true

# Performance Configuration
REQUEST_TIMEOUT=60
MAX_CONCURRENT_REQUESTS=10
CACHE_TTL=300

# Security Configuration
API_KEY_HEADER=X-API-Key
RATE_LIMIT_PER_MINUTE=120

# Health Check Configuration
HEALTH_CHECK_TIMEOUT=10
SERVICE_CHECK_INTERVAL=60

# Monitoring Configuration
ENABLE_METRICS=false
METRICS_PORT=9090